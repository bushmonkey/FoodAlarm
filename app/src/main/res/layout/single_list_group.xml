    <RelativeLayout android:id="@+id/toolbar"
        android:layout_marginRight="-100dip"
        android:visibility="gone"
        android:layout_height="25dp"
        android:layout_width="100dp"
        android:gravity="right"
        android:background="#cab5b0"
        android:layout_alignParentRight="true">
        <Button android:id="@+id/usedButton"
            android:layout_height="fill_parent"
            android:layout_width="50dp"
            android:textSize="10sp"
            android:text="Used"
            android:gravity="center"
            android:background="#7ed267"
            android:onClick="usedClick"/>
        <Button android:id="@+id/wastedButton"
            android:layout_height="fill_parent"
            android:layout_width="50dp"
            android:textSize="10sp"
            android:text="Wasted"
            android:background="#ff6761"
            android:gravity="center"
            android:layout_toEndOf="@id/usedButton"/>
