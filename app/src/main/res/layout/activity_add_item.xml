<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="tmedia_ltd.foodalarm.AddItem">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CalendarImg"
        android:layout_below="@+id/ProductNameText"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PrdImg"
        android:layout_marginLeft="45dp"
        android:layout_alignParentTop="false" />

    <EditText
        android:layout_width="fill_parent"
        android:textColor="#aeaeae"
        android:layout_height="50dp"
        android:id="@+id/ProductNameText"
        android:inputType="textAutoCorrect"
        android:autoText="false"
        android:hint="Product Name"
        android:layout_alignParentTop="false"
        android:singleLine="false"
        android:layout_alignEnd="@+id/button"
        android:background="#ffffff"
        android:paddingLeft="20dp"
        android:textSize="16sp"
        android:layout_toEndOf="@id/PrdImg"
 />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text|numberSigned"
        android:ems="10"
        android:id="@+id/ProductPriceText"
        android:hint="0.00"
        android:layout_below="@+id/PriceText"
        android:layout_toLeftOf="@+id/UpdateDetailsBtn"
        android:layout_toRightOf="@+id/PoundSign"
        android:layout_toEndOf="@+id/PoundSign"
        android:gravity="right"
        android:layout_marginRight="5dp"
        android:layout_marginTop="-5dp" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/UpdateDetailsBtn"
        android:layout_alignTop="@+id/NewBtn"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/ExpiryDatePicker"
        android:hint="___/___/___  "
        android:layout_below="@+id/ProductNameText"
        android:layout_toRightOf="@+id/ExpiryTitle"
        android:layout_toEndOf="@+id/ExpiryTitle"
        android:background="#ffffff"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp" />

    <TextView
        android:text="Expiry date"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/ExpiryTitle"
        android:hint="Expiry date"
        android:layout_below="@+id/ProductNameText"
        android:layout_alignBottom="@+id/ExpiryDatePicker"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:gravity="center|center_vertical"
        android:textColor="#aeaeae"
        android:background="#ffffff"
        android:textSize="16sp"
        android:textIsSelectable="false"
        android:layout_toEndOf="@id/CalendarImg"
        android:paddingLeft="-30dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="Quantity"
        android:id="@+id/QuantityTitle"
        android:layout_below="@+id/ExpiryDatePicker"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="10dp"
        android:textColor="#aeaeae"
        android:layout_marginTop="10dp"
        android:background="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan barcode"
        android:id="@+id/button"
        android:layout_above="@+id/UpdateDetailsBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/NewBtn"
        android:layout_alignEnd="@+id/NewBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New"
        android:id="@+id/NewBtn"
        style="@style/AlertDialog.AppCompat"
        android:layout_alignTop="@+id/exitToViewbtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/UpdateDetailsBtn"
        android:layout_toEndOf="@+id/UpdateDetailsBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:id="@+id/exitToViewbtn"
        android:onClick="BackToSummary"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/UpdateDetailsBtn"
        android:layout_toStartOf="@+id/UpdateDetailsBtn"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="+"
        android:id="@+id/button2"
        android:layout_below="@+id/QuantityTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="-2dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="-"
        android:id="@+id/button3"
        android:layout_alignBottom="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2"
        android:layout_marginLeft="-3dp" />

    <TextView
        android:text="Â£"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/PoundSign"
        android:hint="Expiry date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/PriceText"
        android:width="12dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:textSize="16dp"
        android:textColor="#aeaeae" />

    <EditText
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:inputType="text|numberSigned"
        android:ems="10"
        android:id="@+id/editText"
        android:hint="0.00"
        android:layout_alignTop="@+id/button3"
        android:layout_alignLeft="@+id/UpdateDetailsBtn"
        android:layout_alignStart="@+id/UpdateDetailsBtn"
        android:text="1"
        android:gravity="center_horizontal"
        android:layout_marginLeft="5dp"
        android:singleLine="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:id="@+id/PriceText"
        android:paddingTop="10dp"
        android:textColor="#aeaeae"
        android:layout_below="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



</RelativeLayout>
